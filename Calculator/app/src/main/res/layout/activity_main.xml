<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.ageev_victor.calculator_ipoteka.MainActivity">

    <TextView
        android:id="@+id/extView_procentStavka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extView_srokKredita"
        android:layout_marginTop="28dp"
        android:text="@string/stavka" />

    <TextView
        android:id="@+id/extView_pervonachVznos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_stoimostKv"
        android:layout_marginTop="22dp"
        android:text="@string/perv_vznos"
        android:layout_alignRight="@+id/textView_stoimostKv"
        android:layout_alignEnd="@+id/textView_stoimostKv" />

    <EditText
        android:id="@+id/editText_stoimostKv"
        android:layout_width="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_stoimostKv"
        android:layout_alignBottom="@+id/textView_stoimostKv"
        android:layout_toEndOf="@+id/textView_stoimostKv"
        android:layout_toRightOf="@+id/textView_stoimostKv"
        android:paddingLeft="50dp"
        android:hint="3500000" />

    <EditText
        android:id="@+id/editText_pervonachVznos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBottom="@+id/extView_pervonachVznos"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignLeft="@+id/editText_stoimostKv"
        android:layout_alignStart="@+id/editText_stoimostKv"
        android:paddingLeft="50dp"
        android:hint="850000" />

    <TextView
        android:id="@+id/extView_srokKredita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/srok"
        android:layout_below="@+id/extView_pervonachVznos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText_procentStavka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:layout_alignBaseline="@+id/extView_procentStavka"
        android:layout_alignBottom="@+id/extView_procentStavka"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/editText_pervonachVznos"
        android:layout_alignStart="@+id/editText_pervonachVznos"
        android:paddingLeft="50dp"
        android:hint="10.9" />

    <EditText
        android:id="@+id/editText_srokKredita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_above="@+id/editText_procentStavka"
        android:layout_toEndOf="@+id/extView_procentStavka"
        android:layout_alignLeft="@+id/editText_procentStavka"
        android:layout_alignStart="@+id/editText_procentStavka"
        android:paddingLeft="50dp"
        android:hint="25"
        android:layout_toRightOf="@+id/extView_procentStavka" />

    <TextView
        android:id="@+id/textView_stoimostKv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/stoimost"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Переплата за все время:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pereplataTextView"
        android:layout_below="@+id/mesPlatezTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="0 руб"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mesPlatezTextView"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/pereplataTextView"
        android:paddingLeft="10dp"
        android:textColor="@color/colorGreen"
        android:layout_alignLeft="@+id/pereplataChisloTextView"
        android:layout_alignStart="@+id/pereplataChisloTextView" />

    <TextView
        android:text="Месячный платеж:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_below="@+id/button_rasschitat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:text="Посмотреть таблицу платежей"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pereplataChisloTextView"
        android:text="0 руб"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:layout_alignLeft="@+id/editText_procentStavka"
        android:layout_alignStart="@+id/editText_procentStavka"
        android:layout_alignBottom="@+id/pereplataTextView"
        android:layout_alignTop="@+id/pereplataTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_rasschitat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/raschitat"
        android:onClick="calcucate"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
